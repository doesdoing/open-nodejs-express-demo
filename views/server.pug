doctype html
html(ng-app='myApp', lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title 服务器
    script(src='javascripts/jquery.min.js')
    script(src='javascripts/base64.js')
    script(src='javascripts/amazeui.min.js')
    link(rel='stylesheet', href='stylesheets/amazeui.min.css')
    script(src='javascripts/amazeui.ie8polyfill.min.js')
    script(src='javascripts/amazeui.widgets.helper.min.js')
    link(rel='stylesheet', href='stylesheets/screen.css')
    link(rel='stylesheet', href='stylesheets/changed.css')
    script(src='javascripts/angular.min.js')
    script(src='javascripts/app.factory.js')
    script(src='javascripts/server.js')
    link(rel='icon', href='data:;base64,=')
  body(ng-controller='siteCtrl')
    include header
    include personal-setting
    include personal-ico
    include alert
    #my-device-add.am-modal.am-modal-alert(tabindex='-1')
      .am-modal-dialog
        .am-modal-hd 设备信息
        .am-modal-bd
          .am-input-group.am-input-group-primary(style='margin: 3px;width:100%;display:none')
            span.am-input-group-label(style='width: 30%;') ID
            input.am-form-field(type='text', ng-model='ID', style='width: 98%;', value='{{ID}}')
          .am-input-group.am-input-group-primary(style='margin: 3px;width:100%;')
            span.am-input-group-label(style='width: 30%;') 设备型号
            input.am-form-field(type='text', ng-model='Server_model', style='width: 98%;', value='{{Server_model}}')
          .am-input-group.am-input-group-primary(style='margin: 3px;width:100%;')
            span.am-input-group-label(style='width: 30%;') 设备型号
            input.am-form-field(type='text', ng-model='Server_sys', style='width: 98%;', value='{{Server_sys}}')
          .am-input-group.am-input-group-primary(style='margin: 3px;width:100%;')
            span.am-input-group-label(style='width: 30%;') 操作系统
            input.am-form-field(type='text', ng-model='Server_os', style='width: 98%;', value='{{Server_os}}')
          .am-input-group.am-input-group-primary(style='margin: 3px;width:100%;')
            span.am-input-group-label(style='width: 30%;') 登录账号
            input.am-form-field(type='text', ng-model='Server_user', style='width: 98%;', value='{{Server_user}}')
          .am-input-group.am-input-group-primary(style='margin: 3px;width:100%;')
            span.am-input-group-label(style='width: 30%;') 登录密码
            input.am-form-field(type='text', ng-model='Server_password', style='width: 98%;', value='{{Server_password}}')
          .am-input-group.am-input-group-primary(style='margin: 3px;width:100%;')
            span.am-input-group-label(style='width: 30%;') 设备IP
            input.am-form-field(type='text', ng-model='Server_ip', style='width: 98%;', value='{{Server_ip}}')
          .am-input-group.am-input-group-primary(style='margin: 3px;width:100%;')
            span.am-input-group-label(style='width: 30%;') 系统应用
            input.am-form-field(type='text', ng-model='Server_app', style='width: 98%;', value='{{Server_app}}')
          .am-input-group.am-input-group-primary(style='margin: 3px;width:100%;')
            span.am-input-group-label(style='width: 30%;') 使用位置
            input.am-form-field(type='text', ng-model='Server_location', style='width: 98%;', value='{{Server_location}}')
          .am-input-group.am-input-group-primary(style='margin: 3px;width:100%;')
            span.am-input-group-label(style='width: 30%;') 备注
            input.am-form-field(type='text', ng-model='Server_remark', style='width: 98%;', value='{{Server_remark}}')
        .am-modal-footer(ng-show="show")
          span.am-modal-btn(data-am-modal-cancel='') 取消
          span.am-modal-btn(data-am-modal-confirm='',data-am-modal="{target: '#my-alert'}") 确定
    .am-g
      include ctrl-button
      .am-g(style='margin-left: 5px;margin-right: 5px;min-height: 600px')
        table.am-table.am-table-hover.am-table-bordered
          thead
            tr
              th 业务系统
              th 服务器IP
              th 操作系统
              th 状态备注
              th 编辑/查看
          tbody
            tr(ng-repeat='i in data')
              td(style='display:none') {{i.ID}}
              td
                input(ng-click='select_id($index)', type='checkbox', style='margin: 3px;transform: scale(1.5)')
                |  {{i.Server_sys}}
              td {{i.Server_ip}}
              td {{i.Server_os}}
              td {{i.Server_remark}}
              td
                button.am-btn.am-btn-primary.am-btn-xs(type='button', ng-click='edit_or_lookup(i)', data-am-modal="{target: '#my-device-add'}")
                  i.am-icon-pencil.am-icon-sm 修改/查看
    include page
    include footer
